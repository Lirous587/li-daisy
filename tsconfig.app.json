{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "packages/**/*",
    "packages/**/*.vue",
    "examples/**/*",
    "examples/**/*.vue"
  ],
  "exclude": ["**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./packages/*"],
      "@examples/*": ["./examples/*"]
    }
  }
}
