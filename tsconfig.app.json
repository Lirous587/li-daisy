{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "packages",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "baseUrl": ".",
    "paths": {
      "@packages/*": ["./packages/*"]
    }
  }
}
