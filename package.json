{
  "name": "li-daisy",
  "version": "3.1.1",
  "description": "基于 DaisyUI 和 Tailwind CSS 的 Vue 3 组件库",
  "keywords": [
    "vue",
    "vue3",
    "component-library",
    "daisyui",
    "tailwindcss",
    "ui"
  ],
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "style": "./dist/style.css",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "type-check": "vue-tsc --build --force",
    "lint": "eslint \"packages/**/*.{js,ts,vue}\" --fix",
    "lint:docs": "eslint \"docs/examples/**/*.{js,ts,vue}\" --fix",
    "format": "prettier --write packages/ docs/examples",
    "build": "run-s build-only type-check docs:build",
    "build-only": "vite build",
    "release": "node scripts/release.mjs",
    "dev": "vitepress dev docs",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "husky"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "dependencies": {
    "vee-validate": "^4.15.0"
  },
  "devDependencies": {
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@tsconfig/node22": "^22.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-container": "^2.0.10",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "daisyui": "^5.4.7",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "li-daisy": "workspace:*",
    "lint-staged": "^16.2.7",
    "markdown-it-container": "^4.0.0",
    "npm-run-all2": "^8.0.4",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "prettier": "3.7.1",
    "prompts": "^2.4.2",
    "shiki": "^3.17.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitepress": "^1.6.4",
    "vue": "^3.5.13",
    "vue-tsc": "^3.1.5",
    "yup": "^1.6.1"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.2.4"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lirous587/Li-Daisy.git"
  },
  "bugs": {
    "url": "https://github.com/Lirous587/Li-Daisy/issues"
  },
  "homepage": "https://github.com/Lirous587/Li-Daisy#readme",
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
